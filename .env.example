# Server Configuration
#base url for generated links = the the url that serves this app
BASE_URL=http://localhost:3000

#The port the server listens on
PORT=3000

# File Upload Configuration
# Supports: b, kb, mb, gb, tb (e.g., 100mb, 5gb, 1024kb)
MAX_FILE_SIZE_BYTES=10mb
BODY_SIZE_LIMIT=50mb

# Session and Cleanup Configuration
# 15 minutes in milliseconds
SESSION_TIMEOUT_MS=900000
# 5 minutes in milliseconds
CLEANUP_INTERVAL_MS=300000

# How long to keep uploaded files in minutes
FILE_RETENTION_TIME=30



# Global rate limit (DDoS protection - all IPs combined)
# 1 minute window
GLOBAL_RATE_LIMIT_WINDOW_MS=60000
# Max requests total per window
GLOBAL_RATE_LIMIT_MAX=10000


# Rate Limiting Configuration FOR 1 IP:

# General API rate limit (requests per window)
# 1 minute window
RATE_LIMIT_WINDOW_MS=60000
# Max requests per window for general endpoints
RATE_LIMIT_MAX_REQUESTS=100

# Session creation rate limit (stricter to prevent abuse)
# 1 minute window
SESSION_RATE_LIMIT_WINDOW_MS=60000
# Max session creations per window
SESSION_RATE_LIMIT_MAX=10

# Upload rate limit (strictest)
# 1 minute window
UPLOAD_RATE_LIMIT_WINDOW_MS=60000  
# Max uploads per window
UPLOAD_RATE_LIMIT_MAX=10
